{
  "extends": ["airbnb", "plugin:react/recommended", "plugin:makestyles/recommended"],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "rules": {
    "linebreak-style": 0,
    "max-len": ["error", { "code": 120 }],
    "semi": ["error", "never"],
    "react/prop-types": 0,
    "consistent-return": 0,
    "brace-style": ["error", "stroustrup"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "jsx-a11y/no-autofocus": 0,
    "react/display-name": 0,
    "prefer-rest-params": 0,
    "no-plusplus": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "react/no-did-mount-set-state": 0,
    "react/jsx-props-no-spreading": 0,
    "import/no-cycle": 0
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true
  }
}
